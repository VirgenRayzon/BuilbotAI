
{
  "entities": {
    "Part": {
      "title": "PC Part",
      "description": "Represents a single PC component in the inventory.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "brand": { "type": "string" },
        "price": { "type": "number" },
        "stock": { "type": "number" },
        "imageUrl": { "type": "string", "format": "uri" },
        "specifications": {
          "type": "object",
          "description": "A map of key-value pairs for technical specs."
        }
      },
      "required": ["name", "brand", "price", "stock", "imageUrl", "specifications"]
    },
    "PrebuiltSystemComponents": {
        "title": "Prebuilt System Components",
        "description": "A list of components included in a pre-built system.",
        "type": "object",
        "properties": {
            "cpu": { "type": "string" },
            "gpu": { "type": "string" },
            "motherboard": { "type": "string" },
            "ram": { "type": "string" },
            "storage": { "type": "string" },
            "psu": { "type": "string" },
            "case": { "type": "string" },
            "cooler": { "type": "string" }
        }
    },
    "PrebuiltSystem": {
      "title": "Pre-built System",
      "description": "Represents a fully assembled PC available for purchase.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "tier": {
          "type": "string",
          "enum": ["Entry", "Mid-Range", "High-End", "Workstation"]
        },
        "description": { "type": "string" },
        "price": { "type": "number" },
        "imageUrl": { "type": "string", "format": "uri" },
        "components": {
          "$ref": "#/entities/PrebuiltSystemComponents"
        }
      },
      "required": ["name", "tier", "price", "imageUrl", "components"]
    }
  },
  "auth": {
    "providers": []
  },
  "firestore": {
    "/CPU/{partId}": { "schema": { "$ref": "#/entities/Part" } },
    "/GPU/{partId}": { "schema": { "$ref": "#/entities/Part" } },
    "/Motherboard/{partId}": { "schema": { "$ref": "#/entities/Part" } },
    "/RAM/{partId}": { "schema": { "$ref": "#/entities/Part" } },
    "/Storage/{partId}": { "schema": { "$ref": "#/entities/Part" } },
    "/PSU/{partId}": { "schema": { "$ref": "#/entities/Part" } },
    "/Case/{partId}": { "schema": { "$ref": "#/entities/Part" } },
    "/Cooler/{partId}": { "schema": { "$ref": "#/entities/Part" } },
    "/prebuiltSystems/{systemId}": {
      "schema": { "$ref": "#/entities/PrebuiltSystem" },
      "description": "Collection of all pre-built PC systems."
    }
  }
}
